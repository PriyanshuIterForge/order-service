pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Gradle') {
            steps {
                bat 'gradlew build'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t order-service .'
            }
        }
    }
}
